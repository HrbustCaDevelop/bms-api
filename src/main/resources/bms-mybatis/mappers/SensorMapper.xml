<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ca.bms.dao.SensorDao">

	<resultMap id="SensorResultMap"
		type="SensorEntity">
		<id column="ID" property="id" jdbcType="BIGINT" />
		<result column="CREATE_TIME" property="createTime" jdbcType="timestamp" />
		<result column="MODIFY_TIME" property="modifyTime" jdbcType="timestamp" />
		<result column="VERSION" property="version" jdbcType="BIGINT" />
		
		
		<collection column="USER_ID" property="sensorList" ofType="SensorEntity"
                    select="SensorEntity.getSensorByUserId"/>
	</resultMap>

	<select id="getSensorByUserId" resultMap="SensorResultMap" parameterType="Long">
		SELECT
		ID,
		CREATE_TIME,
		MODIFY_TIME,
		VERSION,
		USERNAME,
		PASSWORD,
		NICKNAME,
		PHONE_NUM,
		AUTH_NUM
		FROM bms_user
		WHERE
		USERNAME=#{username}
	</select>
	
</mapper>